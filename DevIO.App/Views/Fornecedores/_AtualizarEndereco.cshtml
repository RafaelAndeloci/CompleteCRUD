@model DevIO.App.ViewModels.FornecedorViewModel
@{
	ViewData["Title"] = "Atualizar Endereço";
}

<div id="editAddress" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			
			<div class="modal-header">
				<h4 class="modal-title" id="editAddressLabel">@ViewData["Title"]</h4>
				<button type="button" class="close" data-bs-dismiss="modal">
					<span class="fa fa-window-close"></span>
				</button>
			</div>

			<div class="modal-body">
				<form asp-action="AtualizarEndereco" method="post">
					<input type="hidden" asp-for="Endereco.FornecedorId"/>
					<input type="hidden" asp-for="Endereco.Id"/>
					<partial name="_Endereco"/>
					<input type="submit" class="btn btn-success" data-save="modal" value="Salvar"/>
					<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
				</form>
			</div>
			
			<div class="modal-footer">
				<div class="col-md-offset-2 col-md-10">
					
				</div>
			</div>

		</div>
	</div>
</div>

<script>
	BuscaCep();
</script>

